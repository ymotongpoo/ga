{
  "enabled": true,
  "name": "FormatとLint",
  "description": "Automatically runs go fmt to format Go code whenever .go files are saved",
  "version": "1",
  "when": {
    "type": "userTriggered",
    "patterns": [
      "**/*.go"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "トリガーされたら次のコマンドを実行してください\n\n* go fmt **/*\n* go vet **/*"
  }
}